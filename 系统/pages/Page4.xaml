        <Label Content="电话：" HorizontalAlignment="Center" Margin="100,143,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tel" HorizontalAlignment="Center" Height="23" Margin="350,146,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="学院：" HorizontalAlignment="Center" Margin="-400,290,0,0" VerticalAlignment="Top"/>
        <Label Content="密码：" HorizontalAlignment="Center" Margin="-400,222,0,0" VerticalAlignment="Top"/>
