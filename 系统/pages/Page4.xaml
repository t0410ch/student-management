<Page x:Class="系统.pages.Page4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:系统.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="525.123"
      Title="Page4">

    <Grid>
        <Label Content="工号：" HorizontalAlignment="Center" Margin="-400,69,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="no" IsEnabled="False" HorizontalAlignment="Center" Height="23" Margin="-150,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="131"/>
        <Label Content="姓名：" HorizontalAlignment="Center" Margin="100,69,0,0" VerticalAlignment="Top"/>

        <Label Content="性别：" HorizontalAlignment="Center" Margin="-400,143,0,0" VerticalAlignment="Top"/>
